{% extends 'base.html.twig' %}

{% block title %}Inscription !{% endblock %}

{% block body %}
<div class="container{% if block ('carousel') is not defined %} mt-2{% endif %}">
    <h1 class="text-info text-center">Inscription !</h1>
    {% if notify %}
        <div class="alert alert-info">
            {{ notify }}
            <hr>
        </div>
    {% endif %}
    <div class="col-md-4 m-auto bg-info text-light">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn btn-primary rounded-pill">S'inscrire</button>
        {{ form_end(form) }}

    </div>
</div>
{% endblock %}
